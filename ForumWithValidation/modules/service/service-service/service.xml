<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="org.company.service">
	<namespace>asif</namespace>
	
	<entity local-service="true" name="Employer" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="employerId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="name" type="String" />
		<column name="surname" type="String" />
		<column name="age" type="long" />
		
	</entity>
	
	<entity local-service="true" name="Employee" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="employeeId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="name" type="String" />
		<column name="surname" type="String" />
		<column name="age" type="long" />
		
	</entity>
	
	<entity local-service="true" name="StudentInfo" remote-service="false" uuid="false">

		<!-- PK fields -->

		<column name="studentId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="firstname" type="String" />
		<column name="lastname" type="String" />
		<column name="gender" type="String" />
		<column name="dateofbirth" type="String" />
		<column name="course" type="String" />
		<column name="intake" type="String" />
		<column name="address" type="String" />
		<column name="city" type="String" />
		<column name="postcode" type="String" />
		<column name="country" type="String" />
		<column name="email" type="String" />
		<column name="mobile" type="String" />
		
	</entity>
	
	
</service-builder>